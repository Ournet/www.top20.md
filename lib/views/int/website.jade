      google_ad_slot = "0161375894";
      google_ad_width = 468;
      google_ad_height = 60;
      //-->
    script(type='text/javascript', src='http://pagead2.googlesyndication.com/pagead/show_ads.js')
  h3 Similar sites
  .list.sites.full-view
    table
      each item, index in similarWebsites
        tr
          td.count= index+1
          td.info
            a(href='/int/info/'+item.id)= item.title
            p= item.description
          td.views= item.countViews